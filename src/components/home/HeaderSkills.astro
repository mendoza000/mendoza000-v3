---
import {
	IconBrandGolang,
	IconBrandGit,
	IconBrandJavascript,
	IconBrandNextjs,
	IconBrandTailwind,
	IconBrandTypescript,
	IconBrandSupabase,
} from "@tabler/icons-react";
import HeaderSkill from "@/components/ui/HeaderSkill";
---

<div class="min-h-[20rem] relative lg:min-h-full min-w-full">
	<HeaderSkill
		className={"bg-yellow-500 border-yellow-300 animate-bounce-slow-2"}
		position={"lg:top-20 lg:right-64 right-0"}
	>
		<IconBrandJavascript size={60} />
	</HeaderSkill>

	<HeaderSkill
		className={" bg-red-300 border-red-200 animate-bounce-slow"}
		position={"lg:top-46 lg:right-24 top-36 right-3"}
	>
		<IconBrandGit size={60} />
	</HeaderSkill>

	<HeaderSkill
		className={" bg-gray-400 border-gray-300 animate-bounce-slow-3"}
		position={"lg:top-46 lg:left-20 left-0 top-40"}
	>
		<IconBrandNextjs size={60} />
	</HeaderSkill>

	<HeaderSkill
		className={" bg-cyan-400 border-cyan-300 animate-bounce-slow-2"}
		position={"lg:bottom-72  left-5"}
	>
		<IconBrandTailwind size={60} />
	</HeaderSkill>

	<HeaderSkill
		className={" bg-blue-600 border-blue-400 animate-bounce-slow"}
		position={"bottom-28 lg:right-32 right-28"}
	>
		<IconBrandTypescript size={60} />
	</HeaderSkill>

	<HeaderSkill
		className={" bg-blue-400 border-blue-200 animate-bounce-slow-3 hidden lg:flex"}
		position={"bottom-60 right-0"}
	>
		<IconBrandGolang size={60} />
	</HeaderSkill>

	<HeaderSkill
		className={" bg-gray-800 border-gray-700 animate-bounce-slow-2 hidden lg:flex"}
		position={"bottom-32 left-44"}
	>
		<IconBrandSupabase size={60} />
	</HeaderSkill>

